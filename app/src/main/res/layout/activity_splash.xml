<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashActivity">

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/splash_recycler_view"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="50dp" />-->

    <ViewFlipper
        android:id="@+id/splash_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inAnimation="@anim/right_in"
        android:outAnimation="@anim/right_out">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="TOKOTO"
                android:textAlignment="center"
                android:textColor="#FF7643"
                android:textSize="40sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Welcome to Tokoto, Let's shop!"
                android:textAlignment="center"
                android:textColor="#757575"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/splash_1"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="TOKOTO"
                android:textAlignment="center"
                android:textColor="#FF7643"
                android:textSize="40sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="We help people connect with store around United State of America"
                android:textAlignment="center"
                android:textColor="#757575"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/splash_2"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="TOKOTO"
                android:textAlignment="center"
                android:textColor="#FF7643"
                android:textSize="40sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="We show the way to shop\nJust say at home with us"
                android:textAlignment="center"
                android:textColor="#757575"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/splash_3"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </ViewFlipper>

    <Button
        android:id="@+id/splash_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/muli"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

</LinearLayout>